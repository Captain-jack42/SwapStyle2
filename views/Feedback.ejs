<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>We Value Your Feedback</title>
    <link rel="stylesheet" href="/feedback.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <% var givenFeed = typeof givenFeed !== 'undefined' ? givenFeed : []; %>
    <!-- Navbar -->
     <%- include('partials/navbar') %>

    <div class="feedback-bg">
        <div class="feedback-main">
            <!-- Feedback Form Section -->
            <div class="feedback-container glass">
                <div class="feedback-header">
                    <div class="feedback-icon">
                        <i class="fas fa-comment-dots"></i>
                    </div>
                    <h1>We Value Your Feedback</h1>
                    <p>Your thoughts help us improve our service. Please let us know what you think!</p>
                </div>
                <form class="feedback-form" action="/submitFeedback" method="POST">
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" name="name" placeholder="Enter your name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Your Email (optional)</label>
                        <input type="email" id="email" name="email" placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="rating">How would you rate us?</label>
                        <div class="rating-stars">
                            <input type="radio" id="star5" name="rating" value="5" required><label for="star5" title="5 stars">&#9733;</label>
                            <input type="radio" id="star4" name="rating" value="4"><label for="star4" title="4 stars">&#9733;</label>
                            <input type="radio" id="star3" name="rating" value="3"><label for="star3" title="3 stars">&#9733;</label>
                            <input type="radio" id="star2" name="rating" value="2"><label for="star2" title="2 stars">&#9733;</label>
                            <input type="radio" id="star1" name="rating" value="1"><label for="star1" title="1 star">&#9733;</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message">Your Feedback</label>
                        <textarea id="message" name="message" rows="5" placeholder="Type your feedback here..." required></textarea>
                    </div>
                    <button type="submit" class="feedback-btn">Submit Feedback</button>
                </form>
            </div>
            <!-- Past Reviews Section -->
            <div class="reviews-container glass">
                <h2 class="reviews-title"><i class="fas fa-star"></i> What Our Users Say</h2>
                <div class="reviews-list">
                    <% if (givenFeed.length === 0) { %>
                        <div class="no-reviews">No reviews yet. Be the first to leave feedback!</div>
                    <% } %>
                    <% givenFeed.slice().reverse().forEach(feed => { %>
                        <div class="review-card">
                            <div class="review-header">
                                <span class="review-name"><i class="fas fa-user"></i> <%= feed.name %></span>
                                <span class="review-rating">
                                    <% for(let i=0; i<Number(feed.rating); i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                    <% for(let i=Number(feed.rating); i<5; i++) { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                </span>
                            </div>
                            <div class="review-message">"<%= feed.message %>"</div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>